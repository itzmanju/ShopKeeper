<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity"
        android:background="#006699">

    <ImageButton
            android:layout_width="145dp"
            android:layout_height="72dp" app:srcCompat="@android:drawable/ic_input_add"
            android:layout_alignParentStart="true" android:layout_marginStart="34dp"
            android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"
            android:id="@+id/im1" android:layout_marginBottom="122dp" android:layout_marginLeft="34dp"
            />
    <ImageButton
            android:layout_width="145dp"
            android:layout_height="72dp" app:srcCompat="@drawable/ic_menu_manage"
            android:layout_alignParentBottom="true"
            android:id="@+id/im2" android:layout_marginBottom="122dp"
            android:onClick="TakeStock" android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="48dp" android:layout_marginEnd="36dp"
            android:layout_toEndOf="@+id/im1" android:layout_toRightOf="@+id/im1" android:layout_marginLeft="51dp"
            android:layout_marginStart="51dp" android:contentDescription="@string/todo"/>
    <TextView
            android:text="TextView"
            android:layout_width="220dp"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true" android:id="@+id/Result" android:layout_marginBottom="263dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="93dp" android:layout_alignParentStart="true"
            android:layout_marginLeft="97dp" android:layout_marginStart="97dp" android:layout_alignParentLeft="true"
            android:textColor="@android:color/background_dark" android:textSize="20sp" android:typeface="sans"
            android:gravity="center"/>

    <TextView
            android:text="item"
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:layout_alignParentBottom="true" android:id="@+id/scan_content" android:layout_marginBottom="398dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="29dp" android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_alignParentLeft="true"
            android:textColor="@android:color/background_dark" android:textSize="20sp" android:typeface="sans"
            android:gravity="center_vertical|center_horizontal"/>

</RelativeLayout>